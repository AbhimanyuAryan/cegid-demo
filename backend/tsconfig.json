{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["node", "jest", "supertest"]
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "jest.config.ts"],
    "exclude": ["node_modules"]
  }
  